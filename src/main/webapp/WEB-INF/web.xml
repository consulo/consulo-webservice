<!DOCTYPE web-app PUBLIC
		"-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
		"http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Consulo War</display-name>

	<servlet>
		<servlet-name>plugins-list</servlet-name>
		<servlet-class>org.mustbe.consulo.war.servlet.PluginsListServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>plugins-download</servlet-name>
		<servlet-class>org.mustbe.consulo.war.servlet.PluginsDownloadServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>statistics-post</servlet-name>
		<servlet-class>org.mustbe.consulo.war.servlet.StatisticsPostServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>statistics-show</servlet-name>
		<servlet-class>org.mustbe.consulo.war.servlet.StatisticsShowServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>admin-make-release</servlet-name>
		<servlet-class>org.mustbe.consulo.war.servlet.admin.AdminMakeReleaseServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>plugins-list</servlet-name>
		<url-pattern>/plugins/list</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>plugins-download</servlet-name>
		<url-pattern>/plugins/download</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>statistics-post</servlet-name>
		<url-pattern>/statistics/post</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>statistics-show</servlet-name>
		<url-pattern>/statistics/show</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>admin-make-release</servlet-name>
		<url-pattern>/admin/release/make</url-pattern>
	</servlet-mapping>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>admin</web-resource-name>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>
</web-app>
