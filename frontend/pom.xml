<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.3.3.RELEASE</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>consulo</groupId>
	<artifactId>webservice-api</artifactId>
	<packaging>war</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>Consulo Webservice API</name>
	<url>http://maven.apache.org</url>

	<dependencies>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>3.0.1</version>
		</dependency>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.6.4</version>
		</dependency>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.6.4</version>
		</dependency>
		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
			<version>17.0</version>
		</dependency>

		<dependency>
			<groupId>com.google.code.gson</groupId>
			<artifactId>gson</artifactId>
			<version>2.7</version>
		</dependency>

		<dependency>
			<groupId>consulo</groupId>
			<artifactId>annotations</artifactId>
			<version>2.0</version>
		</dependency>

		<dependency>
			<groupId>consulo</groupId>
			<artifactId>picocontainer</artifactId>
			<version>2.0</version>
		</dependency>

		<dependency>
			<groupId>consulo</groupId>
			<artifactId>core-api</artifactId>
			<version>2.0</version>
		</dependency>

		<dependency>
			<groupId>consulo</groupId>
			<artifactId>core-impl</artifactId>
			<version>2.0</version>
		</dependency>

		<dependency>
			<groupId>consulo</groupId>
			<artifactId>platform-api</artifactId>
			<scope>runtime</scope>
			<version>2.0</version>
		</dependency>

		<dependency>
			<groupId>consulo</groupId>
			<artifactId>platform-impl</artifactId>
			<scope>runtime</scope>
			<version>2.0</version>
		</dependency>

		<dependency>
			<groupId>consulo</groupId>
			<artifactId>external-system-api</artifactId>
			<scope>runtime</scope>
			<version>2.0</version>
		</dependency>

		<dependency>
			<groupId>consulo</groupId>
			<artifactId>external-system-impl</artifactId>
			<scope>runtime</scope>
			<version>2.0</version>
		</dependency>

		<dependency>
			<groupId>consulo</groupId>
			<artifactId>jdom</artifactId>
			<version>1.0</version>
		</dependency>

		<dependency>
			<groupId>consulo</groupId>
			<artifactId>trove4j</artifactId>
			<version>1.0</version>
		</dependency>

		<dependency>
			<groupId>consulo</groupId>
			<artifactId>util</artifactId>
			<version>2.0</version>
		</dependency>

		<dependency>
			<groupId>consulo</groupId>
			<artifactId>extensions</artifactId>
			<version>2.0</version>
		</dependency>

		<dependency>
			<groupId>consulo</groupId>
			<artifactId>plugin-analyzer-rt</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>frontend-local-repo</id>
			<name>frontend-local-repo</name>
			<url>file://${project.basedir}/../local-repo</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<version>9.4.0.M0</version>
			</plugin>
		</plugins>
	</build>
</project>
